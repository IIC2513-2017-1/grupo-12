<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Description</th>
      <th>Duration</th>
      <th>Goal (CLP)</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.brief, project%></td>
        <td><%= project.description %></td>
        <td><%= distance_of_time_in_words(Time.now, project.funding_duration) %></td>
        <td><%= number_to_currency(project.funding_goal) %></td>
        <td><%= link_to project.user.fullname, project.user%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path %>
