<%= form_for comment, remote: true, method: :post, url: comments_path do |f| %>

  <div class="field">
    <%= f.text_area :content, required: true, placeholder: "Type your message..." %>
  </div>

  <div class="field">
    <%= f.hidden_field :project_id, :value => project.id %>
  </div>

  <div class="comment-actions">
    <%= f.submit "Post", class: "create-btn btn-primary" %>
  </div>
<% end %>
