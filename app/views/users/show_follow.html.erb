<% provide(:title, @title) %>
  <%= gravatar_for @user, 100 %>
  <h1 class="page-title"><%= @user.fullname %></h1>
  <span><%= link_to "view my profile", @user %></span>

      <%= render 'shared/stats' %>
      <ul>
      <% if @users.any? %>
          <% @users.each do |user| %>
            <li><%= link_to user.fullname, user %></li>
          <% end %>
      <% end %>
      </ul>
