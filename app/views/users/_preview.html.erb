<div class='user-grid-item'>
	<div class='user-picture'>
		<a href="<%= user_path%>"><%= image_tag user.avatar.url(:original), class: "img-circle"%><a>
	</div>
	<div class='user-data'>
		<div class='user-name'>
			<%= link_to user.fullname, user%>
		</div>
		<div class='followers'>
			<span>
			<%= user.following.count %>
      		following
      		</span>
      		<span>|
      		</span>
			<span>
			<%= user.following.count %>
      		followers
      		</span>
		</div>
	</div>
</div>
