<% provide(:title, "Login") %>
<h1 class="title">Sign In</h1>

<div id="login-form">
    <%= form_for(:session, url: login_path) do |f| %>
    <div class="field">
      <%= f.email_field :email, required: true, placeholder: "Email" %>
    </div>
    <div class="field">
      <%= f.password_field :password, required: true, placeholder: "Password" %>
    </div>
    <div class="actions">
      <%= f.submit "Login", class: "user-btn" %>
    </div>
    <% end %>

    <p id="new-user">New user? <%= link_to "Sign up now!", signup_path %></p>
    <%= link_to "Forgot your password?", new_password_reset_path %>
</div>
